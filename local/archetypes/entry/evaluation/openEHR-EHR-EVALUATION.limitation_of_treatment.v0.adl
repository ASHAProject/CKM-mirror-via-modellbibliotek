definition
	EVALUATION[at0000] matches {    -- Emergency care and treatment
		data matches {
			ITEM_TREE[at0001] matches {    -- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {    -- Goal of care
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0003,    -- Curative
									at0004,    -- Restorative
									at0005,    -- Supportive
									at0006,    -- Terminal
									at0007]    -- Unknown
								}
							}
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0008] occurrences matches {0..1} matches {    -- CPR guidance
						value matches {
							DV_TEXT matches {*}
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0009,    -- Full CPR
									at0010,    -- Limited CPR
									at0011,    -- No CPR
									at0012]    -- Unknown
								}
							}
						}
					}
					ELEMENT[at0013] occurrences matches {0..1} matches {    -- Rationale
						value matches {
							DV_TEXT matches {*}
						}
					}
					CLUSTER[at0014] occurrences matches {0..*} matches {    -- Per intervention
						items cardinality matches {1..*; unordered} matches {
							ELEMENT[at0015] matches {    -- Intervention
								value matches {
									DV_CODED_TEXT matches {
										defining_code matches {
											[local::
											at0016,    -- Intubation
											at0017,    -- Mechanical ventilation
											at0018,    -- Vasopressor therapy
											at0019,    -- Parenteral or artificial nutrition
											at0020,    -- Dialysis
											at0021,    -- Blood products
											at0022,    -- Antibiotics, antiviral or antifungal agents
											at0023]    -- Parenteral fluids
										}
									}
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0024] occurrences matches {0..1} matches {    -- Decision
								value matches {
									DV_CODED_TEXT matches {
										defining_code matches {
											[local::
											at0025,    -- Recommended
											at0026,    -- Recommended, with caveat
											at0027,    -- Not recommended
											at0028]    -- Unknown
										}
									}
								}
							}
							ELEMENT[at0029] occurrences matches {0..1} matches {    -- Caveat
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0030] occurrences matches {0..1} matches {    -- Rationale
								value matches {
									DV_TEXT matches {*}
								}
							}
						}
					}
					allow_archetype CLUSTER[at0031] occurrences matches {0..*} matches {    -- Additional details
						include
							archetype_id/value matches {/.*/}
					}
					ELEMENT[at0032] occurrences matches {0..1} matches {    -- Patient awareness
						value matches {
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0033] occurrences matches {0..1} matches {    -- Carer awareness
						value matches {
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0034] occurrences matches {0..1} matches {    -- Comment
						value matches {
							DV_TEXT matches {*}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0035] matches {    -- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0036] occurrences matches {0..1} matches {    -- Last updated
						value matches {
							DV_DATE_TIME matches {*}
						}
					}
					allow_archetype CLUSTER[at0037] occurrences matches {0..*} matches {    -- Mandate
						include
							archetype_id/value matches {/.*/}
					}
					ELEMENT[at0038] occurrences matches {0..1} matches {    -- Review due
						value matches {
							DV_DATE_TIME matches {*}
						}
					}
					allow_archetype CLUSTER[at0039] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}


