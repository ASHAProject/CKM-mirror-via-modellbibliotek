                        lower matches {
                            DV_DATE matches {*}
                        }
                        upper matches {
                            DV_DATE matches {*}
                        }
                    }
                }
            }
            ELEMENT[at0003] occurrences matches {0..*} matches {
                value existence matches {0..1} matches {
                    DV_COUNT matches {
                        magnitude matches {|0..6|}
                    }
                    DV_CODED_TEXT matches {
                        defining_code matches {
                            [local::
                            at0007,
                            at0008,
