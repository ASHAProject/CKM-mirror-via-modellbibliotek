	details = <
		["nb"] = <
			language = <[ISO_639-1::nb]>
			purpose = <"For å registrere informasjon om et individs religiøse eller ikke-religiøse, åndelige eller ikke-åndelige standpunkt, tro eller praksis.">
			use = <"Brukes for å registrere informasjon om et individs religiøse eller ikke-religiøse, åndelige eller ikke-åndelige standpunkt, tro eller praksis.

Arketypen er ment brukt i arketypen EVALUATION.social_summary (Sosialanamnese) eller i andre relevante arketyper.">
			keywords = <"religion", "åndelig", "tro", "religiøs", "ateisme", "ateist", "agnostisisme", "agnostiker", "holdning", "hellig", "profan", "sekulær">
			misuse = <"">
			copyright = <"© Australian Digital Health Agency, Nasjonal IKT HF, openEHR Foundation">
		>
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To record the identification of an individual with religious or non-religious beliefs and/or practices which may be used for purposes related to provision of healthcare or other services.">
			use = <"Use to record  the identification of an individual with religious or non-religious beliefs and/or practices and a general description about the impact of the individual's identified religious affiliation on the delivery of health services.

If this archetype is being used within a health record context where a demographic server is deployed, then the the relevant demographic data may be used to populate the data elements in this archetype in order to support provision of healthcare or other services.

This archetype has been designed to be used within the EVALUATION.social_summary or other archetypes where clinically relevant.">
			keywords = <"religion", "spiritual", "belief", "religious", "atheism", "agnosticism", "attitude", "sacred", "profane", "secular", "atheist", "agnostic", "faith", "creed", "practice">
			misuse = <"Not to be used to record the specific preferences for care that may be related to a religious affiliation, especially those that might drive decision support. For example, record a dietary preference within archetypes recording diet requirements or a treatment preference within archetypes recording patient preferences.">
			copyright = <"© Australian Digital Health Agency, Nasjonal IKT HF, openEHR Foundation">
		>
	>
