definition
	CLUSTER[at0000] matches {    -- Death details
		items cardinality matches {1..*; unordered} matches {
			ELEMENT[at0003] occurrences matches {0..1} matches {    -- Deceased?
				value matches {
					DV_BOOLEAN matches {
						value matches {true}
					}
				}
			}
			ELEMENT[at0001] occurrences matches {0..1} matches {    -- Date/Time of death
				value matches {
					DV_DATE_TIME matches {*}
				}
			}
			ELEMENT[at0002] occurrences matches {0..1} matches {    -- Place of death
				value matches {
					DV_TEXT matches {*}
				}
			}
		}
	}


